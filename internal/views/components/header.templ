package components

import "github.com/FredericoBento/HandGame/internal/models"


templ Header(headerTitle string, navbarLinks []models.RouteButton) {
  <section class="hero">
    <div class="hero-body">
      <div class="container has-text-centered">
        if headerTitle == ""{
          <p class="title">Fred Apps</p>
        } else {
          <p class="title">{ headerTitle }</p>
        }
      </div>
    </div>
  <hr class="header-line">
  if len(navbarLinks) > 0 {
    @HeaderNavbar(navbarLinks)
  }
  </section>
}

templ HeaderNavbar(links []models.RouteButton) {
  <nav class="breadcrumb is-centered header-menu" aria-label="breadcrumbs">
    <ul>
      for _, routeBtn := range links {
        <li><a hx-target="#contents" hx-get={ routeBtn.Url }>{routeBtn.ButtonName}</a></li>
      }
    </ul>
  </nav>
}
